  .container
    / %form.form-signin
    %div.inputFields
      = f.text_field :title, :class => "form-control", :placeholder => "Title"
    %div.inputFields
      =  f.text_field :caption, :class => "form-control", :placeholder => "Caption"
    %div.inputFields
      = f.text_field :tag_list, :class => "form-control", :placeholder => "Tags (separated by commas)"
    %div.inputFields
      = f.label :collection_id
      %br
      = user_collections_select f, current_user
    %div.inputFields
      #new_collection_form.hide
        = text_field_tag "collection[title]", nil, placeholder: "Title", class: "form-control"
        %br
        = text_area_tag "collection[description]", nil, placeholder: "Description", class: "form-control"
    %div.inputFields
      = f.label :image
      = f.file_field :image
    .actions
      = f.submit 'Save', :class => "btn btn-large btn-primary"






